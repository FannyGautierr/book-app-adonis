<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>AdonisJS - A fully featured web framework for Node.js</title>
  @entryPointStyles('app')
  @entryPointScripts('app')
</head>
<body >
  @component('components.navbar')
  @endcomponent

  
    <div class="bg-white flex flex-row items-center justify-around w-full p-8 shadow-nav">
      <img src="/img/bon.png" alt="" class="w-1/6">
      <div class="flex flex-col gap-4">
        <h2 class="text-accent title">TomeSway</h2>
        <div class="bg-accent h-1 w-full block"></div>
        <p class="">Discover your next great read with our modern book browsing experience. Search, explore, and add to your bookshelf with ease. Start your reading journey today!</p>
      </div>
      <img src="/img/herobook.png" alt="">
    </div>

    <div id="menu-container" class="shadow-menu flex flex-row m-center bg-white w-1/2 p-8 justify-around items-center rounded-full mt-10 font-bold px-10">
      <div class="font-bold font-2xl active home-select our-categories">Categories</div>
      <div class="font-bold font-2xl home-select trending">Trending</div>
      <div class="font-bold font-2xl home-select discover">Discover</div>
    </div>

    <div id="category-component">
      @component('components.home.category')
      @endcomponent
    </div>
    
    <div id="trending-component" class="hidden">
      @component('components.home.trending',{ books: books })
      @endcomponent
    </div>
    
    <div id="discover-component" class="hidden">
      @component('components.home.discover')
      @endcomponent
    </div>



     
   
</body>
</html>
